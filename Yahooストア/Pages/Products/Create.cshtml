@page
@model Yahooストア.Pages.Products.CreateModel

@{
    ViewData["Title"] = "作成";
}

<h1>作成</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Thick" class="control-label"></label>
                <input asp-for="Product.Thick" class="form-control" />
                <span asp-validation-for="Product.Thick" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Width" class="control-label"></label>
                <input asp-for="Product.Width" class="form-control" />
                <span asp-validation-for="Product.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Vertical" class="control-label"></label>
                <input asp-for="Product.Vertical" class="form-control" />
                <span asp-validation-for="Product.Vertical" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Lid" class="control-label"></label>
                <input asp-for="Product.Lid" class="form-control" />
                <span asp-validation-for="Product.Lid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.YahooModel" class="control-label"></label>
                <input asp-for="Product.YahooModel" class="form-control" />
                <span asp-validation-for="Product.YahooModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.FukuroinModel" class="control-label"></label>
                <input asp-for="Product.FukuroinModel" class="form-control" />
                <span asp-validation-for="Product.FukuroinModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="作成" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
